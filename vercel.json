{
  "version": 2,
  "builds": [
    {
      "src": "src/mastra/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "node_modules/pino/**", "node_modules/@mastra/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/mastra/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/mastra/index.ts": {
      "includeFiles": "node_modules/pino/**"
    }
  }
}
